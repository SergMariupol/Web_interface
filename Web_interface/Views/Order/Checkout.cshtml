@model Order

<div>
  
        <h3>Оформление заказа</h3>
    
    
    <form asp-action="Checkout" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="col-md-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="surName"></label>
            <div class="col-md-5">
                <input asp-for="surName" class="form-control" />
                <span asp-validation-for="surName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="adress"></label>
            <div class="col-md-5">
                <input asp-for="adress" class="form-control" />
                <span asp-validation-for="adress" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="phone"></label>
            <div class="col-md-5">
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="mail"></label>
            <div class="col-md-5">
                <input asp-for="mail" class="form-control" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
        </div>


        <input class="btn btn-success" type="submit" value="Создать заказ" />
    </form>
</div>