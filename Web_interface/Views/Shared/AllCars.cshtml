@model Car


<div class="col - lg - 2">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" />
    <h2>@Model.name</h2>
    <p>@Model.shortDesc</p>
    <p>Цена: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCar" asp-action="addtoCar" asp-route-id="@Model.id">Добавить в корзину</a></p>
</div>